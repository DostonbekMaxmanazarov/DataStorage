<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@null"
    app:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_linear">

        <ImageView
            android:id="@+id/image_camera2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Name"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="@id/text_userName2"
            app:layout_constraintLeft_toRightOf="@id/image_camera2"
            app:layout_constraintTop_toTopOf="@id/text_userName2">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="4dp"
            android:text="Email"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="@id/text_fullName2"
            app:layout_constraintLeft_toRightOf="@id/image_camera2"
            app:layout_constraintTop_toTopOf="@id/text_fullName2">

        </TextView>

        <TextView
            android:id="@+id/text_userName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="5"
            android:gravity="center"
            android:lines="1"
            android:padding="4dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:typeface="serif"
            app:layout_constraintBottom_toTopOf="@id/text_fullName2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="UserName">

        </TextView>

        <TextView
            android:id="@+id/text_fullName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="5"
            android:gravity="center"
            android:lines="1"
            android:padding="4dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:typeface="serif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_userName2"
            tools:text="Email">

        </TextView>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#fff"
            app:layout_constraintBottom_toTopOf="@id/text_fullName2"
            app:layout_constraintLeft_toRightOf="@id/image_camera2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_userName2">

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>